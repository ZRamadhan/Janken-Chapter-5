<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/layoutRoot"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".HomeActivity"
  android:layout_gravity="center_vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
      android:id="@+id/txtPilih"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Pilih Lawan Mu"
      android:layout_marginBottom="40dp"
      style="@style/HomeText"/>

    <ImageView
      android:id="@+id/btnVsPemain"
      android:layout_width="180dp"
      android:layout_height="150dp"
      android:src="@drawable/ic_landing_page1" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/txtNamaPemainVsPemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        style="@style/HomeText" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        style="@style/HomeText"/>

      <TextView
        android:id="@+id/txtOponentCpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oponent_cpu"
        style="@style/HomeText"/>
    </LinearLayout>

    <ImageView
      android:id="@+id/btnVsCpu"
      android:layout_width="180dp"
      android:layout_height="150dp"
      android:layout_marginTop="30dp"
      android:src="@drawable/ic_landing_page2" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/txtNamaPemainVsCpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        style="@style/HomeText" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        style="@style/HomeText"/>

      <TextView
        android:id="@+id/txtOponentPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oponent_player"
        style="@style/HomeText"/>
    </LinearLayout>


  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>